{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"moduleResolution": "Node16",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noPropertyAccessFromIndexSignature": false,
		"skipLibCheck": true,
		"ignoreDeprecations": "5.0"
	},
	"extends": [],
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
